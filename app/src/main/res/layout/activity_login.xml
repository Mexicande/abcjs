<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.LoginActivity">
    <RelativeLayout
        android:background="@mipmap/iv_center_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/fake_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"
            />
        <ImageView
            android:id="@+id/back"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:src="@mipmap/left_back"/>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/logo"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.expense.DoubleFlower.view.editext.PowerfulEditText
            android:id="@+id/ed_phone"
            android:layout_marginTop="30dp"
            android:paddingLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:paddingBottom="8dp"
            android:paddingRight="25dp"
            android:drawablePadding="15dp"
            app:leftDrawableWidth="20dp"
            app:leftDrawableHeight="20dp"
            android:drawableLeft="@mipmap/icon_phone"
            android:lines="1"
            android:hint="手机号"
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="15sp"
            android:background="@mipmap/icon_et_bg"
            android:textColorHint="@color/gay"
            app:theme="@style/MyEditText"
            app:funcType="canClear"
            />

        <RelativeLayout
            android:id="@+id/layout_Result"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/icon_et_bg"
            android:layout_width="match_parent"
            android:paddingLeft="25dp"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/result"
                android:paddingBottom="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/verify_iv"
                android:layout_width="100dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                />
            <EditText
                android:id="@+id/et_Result"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@id/verify_iv"
                android:layout_toRightOf="@id/result"
                android:paddingBottom="8dp"
                android:textSize="15sp"
                android:textColorHint="@color/gay"
                android:theme="@style/MyEditText"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入结果"
                android:lines="1"
                android:maxLength="3"
                android:inputType="number"
                android:background="@null"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_code"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <com.example.expense.DoubleFlower.view.editext.PowerfulEditText
                android:id="@+id/ed_code"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingBottom="8dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:drawablePadding="15dp"
                app:leftDrawableWidth="20dp"
                app:leftDrawableHeight="20dp"
                android:drawableLeft="@mipmap/icon_pw"
                android:lines="1"
                android:hint="验证码"
                android:maxLength="6"
                android:inputType="number"
                android:textSize="15sp"
                android:background="@mipmap/icon_et_bg"
                android:textColorHint="@color/gay"
                app:theme="@style/MyEditText"
                app:funcType="canWatchPwd"
                />
            <Button
                android:id="@+id/bt_code"
                android:layout_marginRight="40dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/colorPrimary"
                android:text="获取验证码"
                android:textSize="12sp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/code_bg"/>
        </RelativeLayout>

        <com.allen.library.SuperButton
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:sCornersRadius="12dp"
            android:text="立即登录"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:sSelectorDisableColor="@color/dispress_color"
            app:sUseSelector="true"
            android:enabled="false"
            app:sSelectorNormalColor="@color/colorPrimary"
            app:sSelectorPressedColor="@color/press_color"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gay"
            android:text="借花花©版权所有"/>

    </RelativeLayout>
</LinearLayout>